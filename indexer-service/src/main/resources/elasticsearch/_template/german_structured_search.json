{
  "index_patterns": "ocs-*-de",
  "order": 100,
  "settings": {
    "analysis": {
      "filter": {
        "custom_stemmer": {
          "type": "stemmer",
          "language": "light_german"
        },
        "custom_stop_filter": {
          "type": "stop",
          "stopwords": "_german_"
        }
      },
      "char_filter": {
        "html": {
          "type": "html_strip"
        },
        "german_special_letters": {
          "type": "mapping",
          "mappings": [
            "Ä => ae",
            "Ä => ae",
            "ä => ae",
            "ä => ae",
            "Ö => oe",
            "Ö => oe",
            "ö => oe",
            "ö => oe",
            "Ü => ue",
            "Ü => ue",
            "ü => ue",
            "ü => ue",
            "ß => ss"
          ]
        },
        "irrelevant_chars": {
          "pattern": "[^\\p{L}\\s\\d_-]",
          "type": "pattern_replace",
          "replacement": " "
        }
      },
      "analyzer": {
        "standard": {
          "filter": [
            "lowercase",
            "custom_stop_filter",
            "custom_stemmer"
          ],
          "char_filter": [
            "html",
            "german_special_letters",
            "irrelevant_chars"
          ],
          "type": "custom",
          "tokenizer": "standard"
        }
      }
    }
  }
}