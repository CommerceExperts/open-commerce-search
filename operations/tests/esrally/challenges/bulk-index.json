{
  "name": "simple-bulk-index",
  "description": "simple-bulk-index",
  "default": true,
  "schedule": [
    {
      "operation": {
        "name": "clean elasticsearch",
        "operation-type": "delete-index"
      }
    },
    {
      "operation": {
        "name": "check cluster health after cleaning",
        "operation-type": "cluster-health",
        "requerst-params": {
          "wait_for_status": "green",
          "wait_for_no_relocating_shards": "true",
          "include-in-reporting": "true"
        }
      }
    },
    {
      "name": "create index {{INDEX}}",
      "operation": {
        "operation-type": "create-index",
        "index": "{{INDEX}}",
        "settings": {
          "index.number_of_replicas": 0,
          "index.refresh_interval": -1
        }
      }
    },
    {
      "name": "bulk index documents into {{INDEX}}",
      "operation": {
        "operation-type": "bulk",
        "corpora": "{{INDEX}}",
        "indices": [
          "{{INDEX}}"
        ],
        "bulk-size": 10000,
        "clients": 4
      }
    },
    {
      "operation": {
        "name": "check cluster health after bulk indexing {{INDEX}}",
        "operation-type": "cluster-health",
        "requerst-params": {
          "wait_for_status": "green",
          "wait_for_no_relocating_shards": "true",
          "include-in-reporting": "true"
        }
      }
    }
  ]
}